<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/court"
    android:fillViewport="true"
    tools:context="com.example.android.basketball.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="@string/eastern"
                    android:textColor="@color/studioBlack"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/team_a_score"
                    android:layout_width="match_parent"
                    android:layout_height="246dp"
                    android:freezesText="true"
                    android:gravity="center"
                    android:paddingBottom="16dp"
                    android:paddingTop="90dp"
                    android:text="@string/_0"
                    android:textColor="@color/green_m"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="13dp"
                    android:background="@color/green_m"
                    android:onClick="addThreeForTeamA"
                    android:text="@string/_3_points"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/green_m"
                    android:onClick="addTwoForTeamA"
                    android:text="@string/_2_points"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/green_m"
                    android:onClick="addOneForTeamA"
                    android:text="@string/free_throw"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="65dp"
                    android:paddingEnd="6dp"
                    android:paddingStart="16dp"
                    android:text="@string/western"
                    android:textColor="@color/studioBlack"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/team_b_score"
                    android:layout_width="match_parent"
                    android:layout_height="258dp"
                    android:freezesText="true"
                    android:gravity="center"
                    android:paddingBottom="16dp"
                    android:paddingTop="80dp"
                    android:text="@string/_0"
                    android:textColor="@color/m_Blue"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="90dp"
                    android:background="@color/m_Blue"
                    android:onClick="addThreeForTeamB"
                    android:text="@string/_3_points"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="110dp"
                    android:background="@color/m_Blue"
                    android:onClick="addTwoForTeamB"
                    android:text="@string/_2_points"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="130dp"
                    android:background="@color/m_Blue"
                    android:onClick="addOneForTeamB"
                    android:text="@string/free_throw"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/reset"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:background="@color/darkYellow"
            android:onClick="resetScore"
            android:text="@string/reset"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>
